{
  "compilerOptions": {
    "outDir": "./lib/",
    "declarationDir": "./lib/types/",
    "module": "commonjs",
    "target": "es6",
    "lib": ["dom", "scripthost", "esnext"],
    "sourceMap": true,
    "declaration": true,
    "esModuleInterop": true,
    "removeComments": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
